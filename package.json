{
    "name": "challenge-frontend-meli",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "nodemon --exec tsx src/api/server.ts",
        "build": "npm run build:client && npm run build:server",
        "build:client": "vite build --outDir dist/client",
        "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server && tsc -p tsconfig.server.json",
        "preview": "cross-env NODE_ENV=production node dist/server/server.js",
        "lint": "eslint 'src/**/*.{ts,tsx}'"
    },
    "dependencies": {
        "axios": "^1.8.3",
        "compression": "^1.8.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^5.0.1",
        "js-cookie": "^3.0.5",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "sirv": "^3.0.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.22.0",
        "@types/express": "^5.0.0",
        "@types/node": "^22.13.4",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "@vitejs/plugin-react": "^4.3.4",
        "cross-env": "^7.0.3",
        "eslint": "^9.22.0",
        "eslint-plugin-react": "^7.37.4",
        "globals": "^16.0.0",
        "nodemon": "^3.1.9",
        "sass": "^1.86.0",
        "tsx": "^4.19.3",
        "typescript": "~5.7.3",
        "typescript-eslint": "^8.26.1",
        "vite": "^6.1.1"
    }
}
